NODE_ENV=test

# Database test terpisah agar tidak ganggu data dev
DB_PROVIDER=sqlite
DATABASE_URL="file:./prisma/test.db"

# JWT Config (sama seperti dev)
JWT_SECRET=supersecret_test_only
JWT_EXPIRES=12h
JWT_ISSUER=toko-ali
JWT_AUDIENCE=toko-ali-pos-api

# Logging
LOG_LEVEL=warn
LOG_PRETTY=false
LOG_SAMPLE=1

# Rate limit & body limit
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=300
RATE_LIMIT_TIME_WINDOW=1m
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_AUTH_TIME_WINDOW=1m
BODY_LIMIT=1048576

# CORS & Proxy
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false
TRUST_PROXY=false
